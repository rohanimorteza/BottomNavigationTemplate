<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    android:background="@drawable/shape_def"
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/crd_education"
            app:cardElevation="5dp"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ico_educationn"/>

                <TextView
                    android:fontFamily="@font/yekan"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تحصیلات"
                    android:textAlignment="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/crd_course"
            app:cardElevation="5dp"
            android:layout_margin="10dp"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ico_book"/>

                <TextView
                    android:fontFamily="@font/yekan"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="دوره"
                    android:textAlignment="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/crd_term"
            app:cardElevation="5dp"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ico_term"/>

                <TextView
                    android:fontFamily="@font/yekan"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ترم"
                    android:textAlignment="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/crd_teacher"
            app:cardElevation="5dp"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ico_teacherr"/>

                <TextView
                    android:fontFamily="@font/yekan"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="استاد"
                    android:textAlignment="center"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>




    </LinearLayout>



</LinearLayout>