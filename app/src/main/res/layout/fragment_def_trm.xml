<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    tools:context=".DefinitionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:fontFamily="@font/yekan"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/edt_deftrm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="نام ترم"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/crd_trmfrg_end"
            android:layout_margin="10dp"
            app:cardElevation="5dp"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ico_term"/>
                <TextView
                    android:fontFamily="@font/yekan"
                    android:textSize="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="پایان ترم"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/crd_trmfrg_start"
            android:layout_margin="10dp"
            app:cardElevation="5dp"
            android:layout_weight=".5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ico_term"/>
                <TextView
                    android:id="@+id/txt_trmfrg_start"
                    android:fontFamily="@font/yekan"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="آغاز ترم"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_def_add"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ico_plus"/>

        <EditText
            android:fontFamily="@font/yekan"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/edt_deftrm_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="سال"
            />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/rec_deftrm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>